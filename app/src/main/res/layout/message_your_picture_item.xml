<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:paddingTop="5dp"
        android:paddingLeft="3dp">
        <ImageView
            android:id="@+id/yourProfileImageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/border_your_room_profile"
            android:padding="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user_basic_icon_color" />

        <TextView
            android:id="@+id/yourNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="김철수"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/yourProfileImageView"
            app:layout_constraintTop_toTopOf="@+id/yourProfileImageView" />

        <ImageView
            android:id="@+id/yourPictureImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/square_border_gray"
            android:clipToOutline="true"
            android:layout_marginBottom="10dp"
            android:elevation="5dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/yourProfileImageView"
            app:layout_constraintTop_toBottomOf="@+id/yourNameTextView"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="TextView"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/yourPictureImageView"
            app:layout_constraintStart_toEndOf="@+id/yourPictureImageView" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>