<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="5dp"
    android:background="@color/white"
    android:paddingLeft="3dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_weight="1"
        android:background="@color/white">

        <ImageView
            android:id="@+id/yourImageView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:background="@drawable/border_your_room_profile"
            android:padding="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/user_basic_icon_color" />

        <TextView
            android:id="@+id/yourNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:text="김철수"
            android:textColor="@color/dark_black"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/yourImageView"
            app:layout_constraintTop_toTopOf="@+id/yourImageView" />

        <TextView
            android:id="@+id/yourMsgTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/border_your_msg"
            android:padding="12dp"
            android:text="하하하 채팅 너무 재밌다!"
            android:textColor="@color/dark_black"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@+id/yourImageView"
            app:layout_constraintTop_toBottomOf="@+id/yourNameTextView" />

        <TextView
            android:id="@+id/timeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="TextView"
            android:textColor="@color/gray"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/yourMsgTextView"
            app:layout_constraintStart_toEndOf="@+id/yourMsgTextView" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>